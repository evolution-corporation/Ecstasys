{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"~core": ["./src/core"],
			"~routes/*": ["./src/routes/*"],
			"~assets/*": ["./assets/*"],
			"~api": ["./src/api"],
			"~components/*": ["./src/components/*"],
			"~constants": ["./src/constants"],
			"~store": ["./src/store"],
			"~hooks": ["./src/hooks"],
			"~contexts/*": ["./src/contexts/*"],
			"~tools": ["./src/tools"],
			"~types": ["./src/types"],
			"~i18n": ["./src/i18n"],
			"~styles": ["./src/styles"]
		},
		"typeRoots": ["./node_modules/@types"],
		"experimentalDecorators": true
	}
}
