{
	"cli": {
		"version": ">=2.1.0"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"android": {
				"buildType": "apk",
				"prebuildCommand": "prebuild"
			},
			"ios": {
				"simulator": true,
				"prebuildCommand": "prebuild"
			},
			"env": {
				"YARN_ENABLE_IMMUTABLE_INSTALLS": "false",
				"APP_VARIANT": "dev"
			}
		},
		"preview-close": {
			"distribution": "internal",
			"channel": "preview",
			"env": {
				"YARN_ENABLE_IMMUTABLE_INSTALLS": "false",
				"APP_VARIANT": "alpha"
			},
			"android": {
				"buildType": "app-bundle",
				"prebuildCommand": "prebuild"
			},
			"ios": {
				"prebuildCommand": "prebuild"
			}
		},
		"preview-open": {
			"distribution": "internal",
			"channel": "preview",
			"env": {
				"YARN_ENABLE_IMMUTABLE_INSTALLS": "false",
				"APP_VARIANT": "beta"
			},
			"android": {
				"buildType": "app-bundle",
				"prebuildCommand": "prebuild "
			}
		},
		"production": {
			"channel": "production",
			"distribution": "store",
			"env": {
				"YARN_ENABLE_IMMUTABLE_INSTALLS": "false",
				"APP_VARIANT": "prod"
			},
			"android": {
				"prebuildCommand": "prebuild "
			},
			"ios": {
				"prebuildCommand": "prebuild"
			}
		}
	},
	"submit": {
		"production": {}
	}
}
